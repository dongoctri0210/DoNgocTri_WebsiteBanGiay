@model IEnumerable<WebsiteBanGiay.Context.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

@*//test222222*@
    <!-- Main content -->
    <section class="content my-3">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>TẤT CẢ LOẠI SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <i class="fas fa-plus"></i>@Html.ActionLink("Thêm", "Create")
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Avatar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShowOnHomePage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DisplayOrder)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <img id="Avatar" class="hide" src="~/Content/images/category/@item.Avatar" width="107" height="98" alt="" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShowOnHomePage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayOrder)
                            </td>
                            <td>
                                <i class="fas fa-edit"></i>@Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                <i class="fab fa-app-store-ios"></i>@Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                <i class="fas fa-trash"></i>@Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

